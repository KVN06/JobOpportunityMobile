<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Esquinas redondeadas -->
    <corners android:radius="32dp" />
    
    <!-- Gradiente oscuro sutil -->
    <gradient
        android:startColor="@color/splash_container_bg"
        android:centerColor="#2A2A2A"
        android:endColor="@color/splash_border"
        android:angle="135"
        android:type="linear" />
        
    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="@color/splash_border" />
        
</shape>